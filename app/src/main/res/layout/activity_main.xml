<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tk.sbschools.cookieclicker.MainActivity"
    android:id="@+id/background"
    android:background="@drawable/bgblue"
    android:padding="0dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView_cookieShower"
        android:src="@drawable/cshower"
        android:scaleX="2"
        android:scaleY="2"
        android:layout_alignParentEnd="false"
        android:layout_margin="0dp"
        android:padding="0dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_cookie"
        android:src="@drawable/cookie"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp"
        android:onClick="cookieClicked" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locTapped"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0 cookies"
        android:id="@+id/textView_cookiedisp"
        android:layout_below="@+id/locTapped"
        android:layout_centerHorizontal="true"
        android:textSize="36dp"
        android:textStyle="bold"
        android:typeface="serif" />

</RelativeLayout>
